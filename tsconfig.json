{
  "compilerOptions": {
    "jsx": "react",
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2018",
    "sourceMap": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "@mono/share": ["share/*"],
      "@mono/g1": ["packages/g1/*"]
    }
  },
  "references": [
    {
      "path": "./packages/g1"
    },
    {
      "path": "./share"
    }
  ],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
